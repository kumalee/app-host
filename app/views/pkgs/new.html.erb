<%=render 'layouts/header'%>
<div class="container pkgs new">
  
  <%=render 'comoms/alert'%>

  <%=form_for @pkg, url:plat_pkgs_path(@plat), :html => { class: "app_form" } do |f|%>
    
    <%= hidden_field_tag "pkg[plat_id]", params[:plat_id] %>
    <div class="title"><span>提交包</span></div>
    <div class="form-group">
      <%= f.file_field :file, required:true, accept:".#{@plat.plat_ext_name}" %>
    </div>

    <div class="form-group">
      <label for="file_nick_name">重命名</label>
      <%= f.text_field :file_nick_name, class:"form-control", placeholder:"不填会直接使用文件名" %>
    </div>

    <div class="form-group">
      <label for="features">变更描述</label>
      <%= f.text_area :features, class:"form-control", placeholder:"描述该包修改细节" %>
    </div>
    
    <%=f.submit "上传", class:"btn btn-primary ui-plat"%>
  <%end%>
</div>